<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:background="#D1CFCF"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/show"
            android:layout_width="393dp"
            android:layout_height="130dp"
            android:text=""
            android:textSize="32dp" />

        <TextView
            android:background="#D1CFCF"
            android:layout_marginLeft="20dp"
            android:id="@+id/ansText"
            android:layout_width="393dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="32dp"
            android:textAlignment="textEnd"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp"/>
        <TableRow android:layout_height="50dp" android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp" android:fitsSystemWindows="true">
            <Button  android:textSize="32dp" android:layout_width="85dp" android:layout_height="60dp" android:layout_marginLeft="5dp" android:layout_marginRight="5dp"></Button>
            <Button  android:textSize="32dp" android:layout_width="85dp" android:layout_height="60dp" android:layout_marginLeft="5dp" android:layout_marginRight="5dp"></Button>
            <Button  android:textSize="32dp" android:layout_width="85dp" android:layout_height="60dp" android:layout_marginLeft="5dp" android:layout_marginRight="5dp"></Button>
            <Button android:background="#B52C2C" android:id="@+id/del" android:text="DEL" android:textSize="20dp" android:layout_width="85dp" android:layout_height="50dp" android:layout_marginLeft="5dp" android:layout_marginRight="5dp"></Button>
        </TableRow>
        <TableRow android:layout_height="100dp" android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp" android:fitsSystemWindows="true">
            <Button android:id="@+id/seven" android:text="7" android:textSize="32dp" android:layout_width="85dp" android:layout_height="70dp" android:layout_marginLeft="5dp" android:layout_marginRight="5dp"></Button>
            <Button android:id="@+id/eight" android:text="8" android:textSize="32dp" android:layout_width="85dp" android:layout_height="70dp" android:layout_marginLeft="5dp" android:layout_marginRight="5dp"></Button>
            <Button android:id="@+id/nine" android:text="9" android:textSize="32dp" android:layout_width="85dp" android:layout_height="70dp" android:layout_marginLeft="5dp" android:layout_marginRight="5dp"></Button>
            <Button android:id="@+id/div" android:text="/" android:textSize="32dp" android:layout_width="85dp" android:layout_height="70dp" android:layout_marginLeft="5dp" android:layout_marginRight="5dp"></Button>
        </TableRow>
        <TableRow android:layout_height="100dp" android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp" android:fitsSystemWindows="true">
            <Button android:id="@+id/four" android:text="4" android:textSize="32dp" android:layout_width="85dp" android:layout_height="70dp" android:layout_marginLeft="5dp" android:layout_marginRight="5dp"></Button>
            <Button android:id="@+id/five" android:text="5" android:textSize="32dp" android:layout_width="85dp" android:layout_height="70dp" android:layout_marginLeft="5dp" android:layout_marginRight="5dp"></Button>
            <Button android:id="@+id/six" android:text="6" android:textSize="32dp" android:layout_width="85dp" android:layout_height="70dp" android:layout_marginLeft="5dp" android:layout_marginRight="5dp"></Button>
            <Button android:id="@+id/multi" android:text="x" android:textSize="32dp" android:layout_width="85dp" android:layout_height="70dp" android:layout_marginLeft="5dp" android:layout_marginRight="5dp"></Button>
        </TableRow>
        <TableRow android:layout_height="100dp" android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp" android:fitsSystemWindows="true">
            <Button android:id="@+id/one" android:text="1" android:textSize="32dp" android:layout_width="85dp" android:layout_height="70dp" android:layout_marginLeft="5dp" android:layout_marginRight="5dp"></Button>
            <Button android:id="@+id/two" android:text="2" android:textSize="32dp" android:layout_width="85dp" android:layout_height="70dp" android:layout_marginLeft="5dp" android:layout_marginRight="5dp"></Button>
            <Button android:id="@+id/three" android:text="3" android:textSize="32dp" android:layout_width="85dp" android:layout_height="70dp" android:layout_marginLeft="5dp" android:layout_marginRight="5dp"></Button>
            <Button android:id="@+id/minus" android:text="-" android:textSize="32dp" android:layout_width="85dp" android:layout_height="70dp" android:layout_marginLeft="5dp" android:layout_marginRight="5dp"></Button>
        </TableRow>
        <TableRow android:layout_height="100dp" android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp" android:fitsSystemWindows="true">
            <Button android:id="@+id/zero" android:text="0" android:textSize="32dp" android:layout_width="85dp" android:layout_height="70dp" android:layout_marginLeft="5dp" android:layout_marginRight="5dp"></Button>
            <Button android:id="@+id/dot" android:text="." android:textSize="32dp" android:layout_width="85dp" android:layout_height="70dp" android:layout_marginLeft="5dp" android:layout_marginRight="5dp"></Button>
            <Button android:id="@+id/add" android:text="+" android:textSize="32dp" android:layout_width="85dp" android:layout_height="70dp" android:layout_marginLeft="5dp" android:layout_marginRight="5dp"></Button>
            <Button android:id="@+id/Butans" android:text="=" android:textSize="32dp" android:layout_width="85dp" android:layout_height="70dp" android:layout_marginLeft="5dp" android:layout_marginRight="5dp"></Button>
        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>